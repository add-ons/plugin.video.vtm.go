<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
    <setting id="credentials_hash" visible="false"/>
    <category label="30800"> <!-- Credentials -->
        <setting label="30801" type="lsep"/> <!-- VTM GO login -->
        <setting label="30803" help="30804" type="text" id="email"/>
        <setting label="30805" help="30806" type="text" id="password" option="hidden"/>
        <setting label="30807" help="30807" type="action" option="close" action="RunPlugin(plugin://plugin.video.vtm.go/check-credentials)" enable="!eq(-2,) + !eq(-1,)" subsetting="true"/>
    </category>
    <category label="30820"> <!-- Interface -->
        <setting label="30821" type="lsep"/> <!-- Features -->
        <setting label="30823" help="30824" type="bool" id="kids_zone_forced" default="false"/>
    </category>
    <category label="30860"> <!-- Playback -->
        <setting label="30861" type="lsep"/> <!-- Subtitles -->
        <setting label="30863" help="30864" type="bool" id="showsubtitles" default="true"/>
        <setting label="30865" type="lsep"/> <!-- Streaming -->
        <setting label="30867" help="30868" type="select" id="max_bandwidth" default="0" values="0|256|512|1024|1536|2048|2560|3072|4096|6144|8192|10240|15360|20480|25600|30720"/>
    </category>
    <category label="30880"> <!-- Expert -->
        <setting label="30881" type="lsep"/> <!-- Streaming -->
        <setting label="30883" help="30884" type="action" id="ishelper_info" action="RunScript(script.module.inputstreamhelper, info)"/>
        <setting label="30885" help="30886" type="action" id="adaptive_settings" option="close" action="Addon.OpenSettings(inputstream.adaptive)" visible="System.HasAddon(inputstream.adaptive) + [String.StartsWith(System.BuildVersion,18) | String.StartsWith(System.BuildVersion,19)]"/>
        <setting label="30887" help="30888" type="action" id="ishelper_settings" option="close" action="Addon.OpenSettings(script.module.inputstreamhelper)"/>
        <setting label="30889" type="lsep"/> <!-- Logging -->
        <setting label="30891" help="30992" type="select" id="max_log_level" values="Quiet|Info|Verbose|Debug" default="Info"/>
    </category>
</settings>
